<ul class="pagination center-align">
    {% if not pagination.first_blocked %}
        <li class="waves-effect"><a href="?page=1&ord_c={{ ordC }}&ord_d={{ ordD }}"><<</a></li>
    {% else %}
        <li class="disabled"><a href="#"><<</a></li>
    {% endif %}

    {% if not pagination.prev_blocked %}
        <li class="waves-effect"><a href="?page={{ pagination.page - 1 }}&ord_c={{ ordC }}&ord_d={{ ordD }}"><</a></li>
    {% else %}
        <li class="disabled"><a href="#"><</a></li>
    {% endif %}

    {% for i in pagination.page - 2..pagination.page - 1 %}
        {% if (i >= 1) %}
            <li class="waves-effect"><a href="?page={{ i }}&ord_c={{ ordC }}&ord_d={{ ordD }}">{{ i }}</a></li>
        {% endif %}
    {% endfor %}

    <li class="waves-effect active"><a href="#">{{ pagination.page }}</a></li>

    {% for i in pagination.page + 1..pagination.page + 2 %}
        {% if (i <= pagination.last_page) %}
            <li class="waves-effect"><a href="?page={{ i }}&ord_c={{ ordC }}&ord_d={{ ordD }}">{{ i }}</a></li>
        {% endif %}
    {% endfor %}

    {% if not pagination.next_blocked %}
        <li class="waves-effect"><a href="?page={{ pagination.page + 1 }}&ord_c={{ ordC }}&ord_d={{ ordD }}">></a></li>
    {% else %}
        <li class="disabled"><a href="#">></a></li>
    {% endif %}

    {% if not pagination.last_blocked %}
        <li class="waves-effect"><a href="?page={{ pagination.last_page }}&ord_c={{ ordC }}&ord_d={{ ordD }}">>></a>
        </li>
    {% else %}
        <li class="disabled"><a href="#">>></a></li>
    {% endif %}
</ul>